# ═══════════════════════════════════════════════════════════════
# WhatsApp Bulk Sender — Environment Configuration
# Copy this file to .env and fill in your values
# ═══════════════════════════════════════════════════════════════

# -- Telegram Bot (admin) ------------------------------------
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_ADMIN_IDS=123456789,987654321

# -- WhatsApp Provider ----------------------------------------
# Choose: "twilio" or "meta"
WA_PROVIDER=twilio

# -- Twilio (if WA_PROVIDER=twilio) --------------------------
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# -- Meta Cloud API (if WA_PROVIDER=meta) --------------------
WA_PHONE_NUMBER_ID=123456789012345
WA_ACCESS_TOKEN=your_permanent_access_token_here
WA_API_VERSION=v21.0
WA_VERIFY_TOKEN=your_custom_verify_token_here

# -- Webhook --------------------------------------------------
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8000

# -- Database -------------------------------------------------
DB_PATH=whatsapp_sender.db

# -- Rate Limiting --------------------------------------------
WA_MESSAGES_PER_SECOND=50

# -- Website --------------------------------------------------
WEBSITE_URL=https://soclose.co

# -- Dashboard ------------------------------------------------
DASHBOARD_PASSWORD=your_dashboard_password_here
DASHBOARD_PORT=8501
